<div class="container-navibar">
  <nav class="navibar">
    <div class="navbar-brand">
      <ul>
        <li>
          <a href=<%= root_url %>><%= ENV["SITE_NAME"] %></a>
        </li>
      </ul>
    </div>
    <div class="navbar-main">
    <% if user_signed_in? %>
      <div class="navbar-new_question">
        <a href="<%= new_question_url %>" class="btn-new_question">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <span>質問する</span>
        </a>
      </div>
      <div class="navbar-search">
        <%= form_tag(tags_search_url) do %>
          <input type="text" name="tag_name" placeholder="タグ名を入力" class="tag-input_field" />
          <input type="submit" name="commit" value="検索" class="btn" />
        <% end %>
      </div>
      <div class="navbar-middle">
        <ul>
          <li>
            <a href="<%= user_url(current_user.id) %>">
              <i class="fa fa-file-text" aria-hidden="true"></i>
              <span>投稿した質問</span>
            </a>
          </li>
          <li>
            <a href="<%= edit_user_registration_url %>">
              <i class="fa fa-user" aria-hidden="true"></i>
              <span>アカウント設定</span>
            </a>
          </li>
        </ul>
      </div>
      <div class="navbar-menu">
        <button type="button" class="collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </button>
      </div>
      <div class="navbar-right collapse" id="navbar-collapse">
        <ul>
          <li><%= link_to 'ログアウト', destroy_user_session_url, method: :delete %></li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-menu">
        <button type="button" class="collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </button>
      </div>
      <div class="navbar-right collapse" id="navbar-collapse">
        <ul>
          <li><%= link_to '新規登録', new_user_registration_url %></li>
          <li><%= link_to 'ログイン', new_user_session_url %></li>
        </ul>
      </div>
    <% end %>
    </div>
  </nav>
</div>