<div class="form_frame max-wid750">
  <%= form_for(answer) do |f| %>
    
    <h3>編集内容を記入</h3>
    <ul>
      <li>
        <%= f.text_area :content, placeholder: "回答を入力する", rows: 15, class: "input_field" %>
        <%= f.hidden_field :question_id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </li>
    </ul>
    <%= f.submit "更新する", class: "btn-form_submit" %>
  <% end %>
</div>